<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/accountLLtest"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:padding="@dimen/dimen_5dp"
        android:layout_margin="@dimen/dimen_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:gravity="center"
            android:background="@android:color/white"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/accountkey"
                android:gravity="center"
                android:text="@string/follow"
                android:textSize="@dimen/dimen_50dp"
                android:textColor="@color/colorPrimary"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/checkKey"
                android:gravity="center"
                android:text="@string/follow"
                android:textSize="@dimen/dimen_50dp"
                android:textColor="@color/colorPrimary"
                android:visibility="gone"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userConnectImg"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen_5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher_web" />

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:gravity="center|left"
                android:paddingLeft="@dimen/dimen_10dp"
                android:id="@+id/userFullName"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/followButton"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_toEndOf="@+id/userConnectImg"
                android:layout_toLeftOf="@+id/followButton"
                android:layout_toRightOf="@+id/userConnectImg"
                android:layout_toStartOf="@+id/followButton"
                android:singleLine="true"
                android:textSize="@dimen/dimen_16dp"
                android:textStyle="bold" />

            <Button
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dimen_5dp"
                android:id="@+id/followButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_alignParentRight="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:background="@drawable/button_border"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/userId"
                android:layout_gravity="center"
                android:textSize="@dimen/dimen_16dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faculty Name"
                android:gravity="center"/>

            <ProgressBar
                android:layout_centerVertical="true"
                android:id="@+id/userProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/userFullName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/userFullName"
                android:layout_toStartOf="@+id/userFullName" />

            <LinearLayout
                android:layout_centerVertical="true"
                android:id="@+id/profileView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/followButton"
                android:layout_toStartOf="@+id/followButton"
                android:orientation="vertical" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/removeUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/followButton"
                android:layout_alignRight="@+id/followButton"
                android:layout_centerVertical="true"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>



